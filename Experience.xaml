<Window x:Class="Exam_Unaibayev.Experience"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam_Unaibayev"
        mc:Ignorable="d"
        Title="Experience" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Введите три предыдущих места работы:" Margin ="10 "/>
        <TextBlock Text="1:"/>
        <TextBox x:Name="experienceOne"></TextBox>
        <TextBlock Text="2:"/>
        <TextBox x:Name="experienceTwo"></TextBox>
        <TextBlock Text="3:"/>
        <TextBox x:Name="experienceThree"></TextBox>
        <Button Content="Назад" Click="Previous_Button" Margin="5"/>
        <Button Content="Сохранить" Click="Save_Button" Margin="5"/>
        <Button Content="Перейти в начало" Click="NewResume_Button" Margin="5"/>
        <Button Content="Выход" Click="Close_Button" Margin="5"/>
        <TextBlock HorizontalAlignment="Right" Text="Окно: 6 из 6" Margin="50"/>
    </StackPanel>
</Window>
